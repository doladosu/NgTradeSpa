@model NgTrade.Models.ViewModel.AccountViewModel

@{
  ViewBag.Title = "Nigerian Stock Exchange Trading Online NSE Daily Price List - NgTradeOnline Account Profile";
}

<div id="personalinfo">
    <h1>
        Personal information</h1>
    <div class="headline">
        <h2>
            Account Status</h2>
    </div>
    <ul>
        @if (Model.Status)
        {
            <li>Active </li>
        }
        else
        { 
            <li>Pending </li>
        }
    </ul>
    <div class="headline">
        <h2>
            Account Number</h2>
    </div>
     <ul>
     <li>
        @Model.AccountNumber</li>
    </ul>
    <div class="headline">
        <h2>
            Contact information</h2>
        <a rel="#lbx0" class="editlink">(edit)</a>
    </div>
    <ul>
        <li>@Model.FirstName @Model.LastName </li>
        <li>@Model.Email</li>
        <li>@Model.Address1 @Model.Address2</li>
        <li>@Model.City @Model.State</li>
        <li>@Model.Country</li>
        <li>@Model.Phone</li>
    </ul>
    <div class="headline">
        <h2>
            Password</h2>
        <a rel="#lbx1" class="editlink">(edit)</a>
    </div>
    <ul>
        <li>******</li>
    </ul>
    <div class="headline">
        <h2>
            Security questions</h2>
        <a rel="#lbx2" class="editlink">(edit)</a>
    </div>
    <ul>
        <li>*******</li>
    </ul>
    <div class="headline">
        <h2>
            Next of Kin information</h2>
        <a rel="#lbx3" class="editlink">(edit)</a>
    </div>
    <ul>
        <li>@Model.NextOfKin </li>
        <li>@Model.NAddress</li>
        <li>@Model.NCity @Model.NState</li>
        <li>@Model.NCountry</li>
    </ul>
</div>
