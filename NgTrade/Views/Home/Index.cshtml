@model NgTrade.Models.ViewModel.HomeViewModel

@{
  ViewBag.Title = "Nigerian Stock Exchange Trading Online NSE Daily Price List - NgTradeOnline";
}
<!-- Start: MAIN CONTENT -->
<div class="content">
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- NgTradeOnlineHomePage -->
<ins class="adsbygoogle"
     style="display:inline-block;width:970px;height:90px"
     data-ad-client="ca-pub-5059153330695623"
     data-ad-slot="4090165520"></ins>
<script>
    (adsbygoogle = window.adsbygoogle || []).push({});
</script>
    <!-- Start: slider -->
    <div class="slider">
        <div class="container-fluid">
            <div id="heroSlider" class="carousel slide">
                <div class="carousel-inner">
                    <div class="active item">
                        <div class="hero-unit">
                            <div class="row-fluid">
                                <div class="span7 marketting-info">
                                    <h3>Learn to trade stocks listed on the Nigerian stock exchange.</h3>
                                    <p>
                                        Simple, Secure and Affordable Way to Learn trading stocks listed on the Nigeria stock exchange
                                    </p>
                                    <h3>
                                        @Html.ActionLink("Todays list", "Index", "Daily", null, new { @class="btn"})
                                    </h3>
                                </div>
                                <div class="span5">
                                    <img src="/images/banner1.jpg" class="thumbnail">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="hero-unit">
                            <div class="row-fluid">
                                <div class="span7 marketting-info">
                                    <h3>Research companies and stocks on the Nigerian stock exchange.</h3>
                                    <p>
                                        Get information and research stocks and companies listed on the Nigerian Stock Exchange
                                    </p>
                                    <h3>
                                        @Html.ActionLink("Todays list", "Index", "Daily", null, new { @class="btn" })
                                    </h3>
                                </div>
                                <div class="span5">
                                    <img src="/images/Banner2.jpg" class="thumbnail">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="left carousel-control" href="#heroSlider" data-slide="prev">‹</a>
                <a class="right carousel-control" href="#heroSlider" data-slide="next">›</a>
            </div>
        </div>
    </div>
    <!-- End: slider -->
    <!-- Start: PRODUCT LIST -->
    <div class="container">
        <div class="page-header">
            <h3>Top stocks for: @Model.SQuoteDay</h3>
            <div class="fb-like" data-href="https://www.facebook.com/NgTradeOnline" data-colorscheme="light" data-layout="button" data-action="like" data-show-faces="true" data-send="true"></div>
            
            <a href="https://twitter.com/ngtradeonline" class="twitter-follow-button" data-show-count="false" data-size="large">Follow @@ngtradeonline</a>
            <script>
                !function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + '://platform.twitter.com/widgets.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'twitter-wjs');
            </script>
        <a href="https://twitter.com/share" class="twitter-share-button" data-via="ngtradeonline" data-size="large" data-related="ngtradeonline" data-hashtags="ngtradeonline">Tweet</a>
<script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + '://platform.twitter.com/widgets.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'twitter-wjs');</script>
        </div>
        <div class="row-fluid">
            <ul class="thumbnails">
                <li class="span4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h4>Day gainers</h4>
                            <table class="table table-striped">  
                                <thead>  
                                    <tr>  
                                        <th>Stock</th>  
                                        <th>Close</th>  
                                        <th>Gain</th>  
                                    </tr>  
                                </thead>  
                                <tbody>
                                    @foreach (var dayGainer in Model.DayGainers)
                                    {
                                        <tr>  
                                            <td>@Html.ActionLink(@dayGainer.Symbol,"Research", "Home", new {stockTicker = @dayGainer.Symbol}, null)</td>
                                            <td>@String.Format("{0:0.00}", dayGainer.Close)</td>  
                                            <td style="color: green">@String.Format("{0:0.00}", dayGainer.Change1)</td>  
                                        </tr>
                                    }
                                </tbody>  
                            </table>  
                        </div>
                    </div>
                </li>
                <li class="span4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h4>Day losers</h4>
                            <table class="table table-striped">  
                                <thead>  
                                    <tr>  
                                        <th>Stock</th>  
                                        <th>Close</th>  
                                        <th>Loss</th>  
                                    </tr>  
                                </thead>  
                                <tbody>
                                    @foreach (var dayLoser in Model.DayLosers)
                                    {
                                        <tr>  
                                            <td>@Html.ActionLink(@dayLoser.Symbol,"Research", "Home", new {stockTicker = @dayLoser.Symbol}, null)</td>
                                            <td>@String.Format("{0:0.00}", dayLoser.Close)</td>  
                                            <td style="color: red">@String.Format("{0:0.00}", dayLoser.Change1)</td>  
                                        </tr>
                                    }
                                </tbody>  
                            </table>  
                        </div>
                    </div>
                </li>
                <li class="span4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h4>NSE Daily price list</h4>
                            <ul class="list-group">
                                <li class="list-group-item">@Html.ActionLink("View Daily price list", "dailypricelist", new { extension = "html" }, new { target = "_blank" })</li>
                                <li class="list-group-item">@Html.ActionLink("Excel download", "dailypricelist", new { extension = "xls" })</li>
                                <li class="list-group-item">@Html.ActionLink("CSV download", "dailypricelist", new { extension = "txt" }, new { target = "_blank" })</li>
                            </ul>
                        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- HomePageSquare -->
<ins class="adsbygoogle"
     style="display:inline-block;width:200px;height:200px"
     data-ad-client="ca-pub-5059153330695623"
     data-ad-slot="9997098322"></ins>
<script>
    (adsbygoogle = window.adsbygoogle || []).push({});
</script>
                        </div>
