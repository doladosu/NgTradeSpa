@using Microsoft.Web.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Bootbusiness | Short description about company">
  <meta name="author" content="Your name">

  <title>@ViewBag.Title - Nigerian Stock Exchange Trading Online NSE Daily Price List - NgTradeOnline</title>
  <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
  <link href="/Content/themes/default/bootstrap.min.css" rel="stylesheet" />
  <link href="/Content/themes/default/bootstrap-responsive.min.css" rel="stylesheet" />
  <link href="/Content/themes/default/font-awesome.css" rel="stylesheet" />
  <link href="/Content/themes/default/font-awesome-ie7.css" rel="stylesheet" />
  <link href="/Content/themes/default/ngtrade.css" rel="stylesheet" />
</head>
<body>
  <header>
    <!-- Start: Navigation wrapper -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a href="@Url.Action("Index", "Home")" class="brand brand-bootbus"><img src="/images/logo.png" alt="NgTradeOnline" /></a>
          <!-- Below button used for responsive navigation -->
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!-- Start: Primary navigation -->
          <div class="nav-collapse collapse">
            <ul class="nav pull-right">
              <li class="dropdown">
                <a href="@Url.Action("Index", "Daily")" class="dropdown-toggle" data-toggle="dropdown">NSE Daily price list<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li class="nav-header">Daily Price list</li>
                  <li>@Html.ActionLink("Todays list", "Index", "Daily")</li>
                  <li>@Html.ActionLink("Day Gainers", "Gainers", "Daily")</li>
                  <li>@Html.ActionLink("Day Losers", "Losers", "Daily")</li>
                </ul>
              </li>
              <li>@Html.ActionLink("FAQ", "Faq", "Home")</li>
              <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
              <li>@Html.ActionLink("Sign up", "Register", "Account")</li>
              <li>@Html.ActionLink("Sign in", "Login", "Account")</li>
              <li>
                  @using (Html.BeginForm("Research", "Home", FormMethod.Post, new { @class = "form-search" }))
                  {
                      <div class="input-append">
                        <input type="text" class="span2 search-query" name="search" placeholder="Enter stock name" />
                        <button type="submit" class="btn"><i class="icon-search"></i>
                        </button>
                      </div>
                  }
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- End: Navigation wrapper -->
  </header>

  @RenderBody()


  <footer>
    <div class="container">
      <div class="row">
        <div class="span2">
          <h4><i class="icon-star icon-white"></i> Exchanges</h4>
          <nav>
            <ul class="quick-links">
              <li>@Html.ActionLink("Nigeria stock exchange", "Index", "Home")</li>
            </ul>
          </nav>
        </div>
        <div class="span2">
          <h4><i class="icon-beaker icon-white"></i> About</h4>
          <nav>
            <ul class="quick-links">
              <li>@Html.ActionLink("About Us", "About", "Home")</li>
              <li><a href="patnerships.html">Patnerships</a></li>
              <li><a href="leadership.html">Leadership</a></li>
              <li><a href="news.html">News</a></li>
              <li><a href="events.html">Events</a></li>
              <li><a href="blog.html">Blog</a></li>
            </ul>
          </nav>
        </div>
        <div class="span2">
          <h4><i class="icon-thumbs-up icon-white"></i> Support</h4>
          <nav>
            <ul class="quick-links">
              <li>@Html.ActionLink("FAQ", "Faq", "Home")</li>
              <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
            </ul>
          </nav>
          <h4><i class="icon-legal icon-white"></i> Legal</h4>
          <nav>
            <ul class="quick-links">
              <li>@Html.ActionLink("Terms of use", "Terms", "Home")</li>
              <li>@Html.ActionLink("Privacy policy", "Privacy", "Home")</li>
            </ul>
          </nav>
        </div>
        <div class="span3">
          <h4>Get in touch</h4>
          <div class="social-icons-row">
            <a href="#"><i class="icon-twitter"></i></a>
            <a href="#"><i class="icon-facebook"></i></a>
            <a href="#"><i class="icon-linkedin"></i></a>
          </div>
          <div class="social-icons-row">
            <a href="#"><i class="icon-google-plus"></i></a>
            <a href="#"><i class="icon-github"></i></a>
            <a href="mailto:soundar.rathinasamy@gmail.com"><i class="icon-envelope"></i></a>
          </div>
          <div class="social-icons-row">
            <i class="icon-phone icon-large phone-number"></i> +919750227877
           
          </div>
        </div>
        <div class="span3">
          <h4>Get updated by email</h4>
          <form>
            <input type="text" name="email" placeholder="Email address">
            <input type="submit" class="btn" value="Subscribe">
          </form>
        </div>
      </div>
    </div>
    <hr class="footer-divider">
    <div class="container">
      <p>
        &copy; @DateTime.Now.Year NgTradeOnline, Inc. All Rights Reserved.
       
      </p>
    </div>
  </footer>

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @Scripts.Render("~/bundles/main")
  @RenderSection("scripts", required: false)
  @Analytics.GetGoogleHtml("UA-15115389-1")
</body>
</html>
