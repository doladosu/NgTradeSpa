@model NgTrade.Models.LoginModel

@{
  ViewBag.Title = "Log in";
}

<div class="content">
  <div class="container">
    <div class="page-header">
      <h1>Signin to NgTradeOnline</h1>
    </div>
    <div class="row">
      <div class="span6 offset3">
        <h4 class="widget-header"><i class="icon-lock"></i> Signin to NgTradeOnline</h4>
        <div class="widget-body">
          <div class="center-align">
            @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-signin-signup" }))
            {
              @Html.LabelFor(m => m.UserName)
              @Html.TextBoxFor(m => m.UserName, new { @placeholder = "User name" })
              @Html.LabelFor(m => m.Password)
              @Html.TextBoxFor(m => m.Password, new { @class = "Password" })
              <div class="remember-me">
                <div class="pull-left">
                  @Html.CheckBoxFor(m => m.RememberMe)
                  @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                </div>
                <div class="pull-right">
                  <a href="#">Forgot password?</a>
                </div>
                <div class="clearfix"></div>
              </div>
              <input type="submit" value="Sign in" class="btn btn-primary btn-large">
            }
            <h4><i class="icon-question-sign"></i> Don't have an account?</h4>
            @Html.ActionLink("Signup", "Register")
            <h4><i class="icon-thumbs-up"></i> Sign in with third party account</h4>
            @Html.Action("ExternalLoginsList", new { ViewBag.ReturnUrl })

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

